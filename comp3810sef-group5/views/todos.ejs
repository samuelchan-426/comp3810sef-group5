<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todos</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1 class="title">TODO LIST</h1>
    <div class="divider"></div>

    <p class="welcome">Welcome, <strong><%= username %></strong>! <a href="/logout">Logout</a></p>

    <% if (msg === 'created') { %>
      <p class="success">Todo created successfully!</p>
    <% } else if (msg === 'updated') { %>
      <p class="success">Todo updated successfully!</p>
    <% } else if (msg === 'deleted') { %>
      <p class="success">Todo deleted successfully!</p>
    <% } %>

    <h2>Create New Todo</h2>
    <form action="/todos" method="POST">
      <input type="text" name="title" placeholder="Title" required>
      <input type="text" name="description" placeholder="Description">
      <button>Add Todo</button>
    </form>

    <h2>Search Todos</h2>
    <form action="/todos" method="GET">
      <input type="text" name="search" value="<%= search %>" placeholder="Search by title...">
      <button>Search</button>
    </form>

    <% if (search) { %>
      <p><strong><%= todos.length %></strong> item(s) found for "<%= search %>"</p>
    <% } else { %>
      <p><strong><%= todos.length %></strong> total todo(s)</p>
    <% } %>

    <h2>Todo List</h2>
    <% if (todos.length === 0) { %>
      <p>No todos found.</p>
    <% } else { %>
      <ul>
        <% todos.forEach(todo => { %>
          <li>
            <strong><%= todo.title %></strong><br>
            <%= todo.description || '(No description)' %>
            <div class="actions">
              <a href="/todos/edit/<%= todo._id %>">Edit</a>
              <form action="/todos/delete/<%= todo._id %>" method="POST" style="display:inline;margin-left:10px;">
                <button class="delete-btn">Delete</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>
