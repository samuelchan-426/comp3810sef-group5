<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <h1 class="title">TODO LIST</h1>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
    <div class="divider-long"></div>

    <!-- WELCOME MESSAGE -->
    <% if (welcome) { %>
      <div class="success">
        <p>Welcome, <strong><%= username %>!</strong> You're now logged in.</p>
      </div>
    <% } %>

    <!-- SUCCESS MESSAGES -->
    <% if (msg === 'created') { %>
      <div class="success"><p>Todo created successfully!</p></div>
    <% } else if (msg === 'updated') { %>
      <div class="success"><p>Todo updated successfully!</p></div>
    <% } else if (msg === 'deleted') { %>
      <div class="success"><p>Todo deleted successfully!</p></div>
    <% } %>

    <!-- CREATE TODO FORM -->
    <h2>Add New Todo</h2>
    <form action="/todos/preview" method="GET">
      <div class="form-group">
        <label><strong>Title:</strong></label>
        <input type="text" name="title" value="<%= title %>" required>
      </div>
      <div class="form-group">
        <label><strong>Description:</strong></label>
        <input type="text" name="description" value="<%= description %>">
      </div>
      <div class="datetime-picker">
        <div>
          <label><strong>Due Date (optional):</strong></label>
          <input type="date" name="dueDate" value="<%= dueDate %>">
        </div>
        <div>
          <label><strong>Due Time (optional):</strong></label>
          <input type="time" name="dueTime" value="<%= dueTime %>">
        </div>
      </div>
      <button type="submit" class="btn-primary">Preview & Confirm</button>
    </form>

    <div class="divider"></div>

    <!-- SEARCH BY TITLE -->
    <h2>Search Todos</h2>
    <form action="/todos" method="GET" style="margin-bottom: 20px;">
      <input type="text" name="search" placeholder="Search by title..." value="<%= search %>" style="width: 70%; padding: 10px; font-size: 1em;">
      <button type="submit" class="btn-primary">Search</button>
    </form>

    <!-- DATE FILTER PICKER -->
    <div class="form-group" style="margin: 20px 0; text-align: center;">
      <label><strong>Filter by Due Date:</strong></label>
      <input type="date" id="dateFilter" style="padding: 10px; font-size: 1em; border-radius: 6px; border: 1px solid #ddd;">
      <button onclick="filterByDate()" class="btn-primary" style="margin-left: 10px;">Search Date</button>
      <button onclick="clearDateFilter()" class="btn-secondary" style="margin-left: 5px;">Clear</button>
    </div>

    <!-- RESULT COUNT -->
    <p class="result-count"><strong><%= totalFound %> item(s) found</strong></p>

    <!-- TODO LIST -->
    <% if (todos.length === 0) { %>
      <p class="no-todos">No todos found. Create one above!</p>
    <% } else { %>
      <ul class="todo-list">
        <% todos.forEach(todo => { %>
          <li class="todo-item">
            <div class="todo-content">
              <span class="todo-title"><%= todo.title %></span>
              <% if (todo.description) { %>
                <span class="description"><%= todo.description %></span>
              <% } %>
              <% if (todo.dueDate) { %>
                <% 
                  const due = new Date(todo.dueDate);
                  const hktDate = due.toLocaleDateString('en-GB', { timeZone: 'Asia/Hong_Kong', day: 'numeric', month: 'short', year: 'numeric' });
                  const now = new Date();
                  const diffMs = due - now;
                  const diffDays = Math.floor(diffMs / (1000*60*60*24));
                  const diffHours = Math.floor((diffMs % (1000*60*60*24)) / (1000*60*60));
                  let countdown = '';
                  if (diffMs < 0) countdown = 'Overdue';
                  else if (diffDays > 0) countdown = `${diffDays} day${diffDays > 1 ? 's' : ''} left`;
                  else if (diffHours > 0) countdown = `${diffHours} hour${diffHours > 1 ? 's' : ''} left`;
                  else countdown = 'Due soon';
                %>
                <br><small class="due-date">
                  Due: <%= hktDate %>
                  <% if (todo.dueTime && todo.dueTime.trim() !== '') { %>
                    at <%= todo.dueTime %> HKT
                  <% } %>
                  <% if (!todo.dueTime || todo.dueTime.trim() === '') { %>
                    (No time)
                  <% } %>
                  â€” <%= countdown %>
                </small>
              <% } else { %>
                <br><small class="due-date">No due date</small>
              <% } %>
              <span class="owner">Added by: <%= todo.username %> on <%= new Date(todo.createdAt).toLocaleString('en-GB', { timeZone: 'Asia/Hong_Kong' }) %> HKT</span>
              <% if (todo.updatedAt) { %>
                <span class="owner">Edited by: <%= todo.updatedBy %> on <%= new Date(todo.updatedAt).toLocaleString('en-GB', { timeZone: 'Asia/Hong_Kong' }) %> HKT</span>
              <% } %>
            </div>
            <div class="todo-actions">
              <a href="/todos/edit/<%= todo._id %>" class="edit-btn">Edit</a>
              <form action="/todos/delete/<%= todo._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this todo?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>

  <!-- DATE SEARCH SCRIPT -->
  <script>
    function filterByDate() {
      const date = document.getElementById('dateFilter').value;
      if (date) {
        const [y, m, d] = date.split('-');
        const formatted = `${parseInt(d)} ${new Date(date).toLocaleString('en-GB', { month: 'short' }).toUpperCase()} ${y}`;
        window.location.href = `/todos?search=${encodeURIComponent(formatted)}`;
      }
    }

    function clearDateFilter() {
      document.getElementById('dateFilter').value = '';
      window.location.href = '/todos';
    }

    // Auto-focus search on load
    document.addEventListener('DOMContentLoaded', () => {
      const today = new Date().toISOString().split('T')[0];
      const dateInput = document.querySelector('input[type="date"]');
      if (dateInput) dateInput.min = today;
    });
  </script>
</body>
</html>
