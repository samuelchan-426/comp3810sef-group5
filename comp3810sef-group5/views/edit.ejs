<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="/styles.css">
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Force English calendar
      const inputs = document.querySelectorAll('input[type="date"], input[type="time"]');
      inputs.forEach(input => {
        input.lang = 'en-GB';
        input.setAttribute('lang', 'en-GB');
      });

      // Disable past dates
      const today = new Date().toISOString().split('T')[0];
      document.querySelectorAll('input[type="date"]').forEach(dateInput => {
        dateInput.setAttribute('min', today);
      });
    });
  </script>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1 class="title">TODO LIST</h1>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
    <div class="divider-long"></div>
    <h2>Edit Todo</h2>

    <form action="/todos/edit-preview/<%= todo._id %>" method="POST">
      <input type="text" name="title" value="<%= todo.title %>" required>
      <input type="text" name="description" value="<%= todo.description || '' %>">
      <div class="datetime-picker">
        <label>Due Date:</label>
        <input type="date" name="dueDate" value="<%= todo.dueDate ? new Date(todo.dueDate).toISOString().slice(0,10) : '' %>" min="">
        <label>Due Time:</label>
        <input type="time" name="dueTime" value="<%= todo.dueDate ? new Date(todo.dueDate).toISOString().slice(11,16) : '' %>">
      </div>
      <button type="submit">Preview Changes</button>
    </form>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const today = new Date().toISOString().split('T')[0];
        document.querySelector('input[type="date"]').min = today;
      });
    </script>

    <br>
    <a href="/todos">Back to List</a>
  </div>
</body>
</html>
